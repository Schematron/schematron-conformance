<?xml version="1.0" encoding="UTF-8"?>
<testcase expect="invalid" xmlns="https://doi.org/10.5281/zenodo.5679629#">
  <testcase:label xmlns:testcase="https://doi.org/10.5281/zenodo.5679629#">Let uses the element content as value</testcase:label>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:ns prefix="html" uri="http://www.w3.org/1999/xhtml"/>
      <sch:let name="foobar">
        <html:p xmlns:html="http://www.w3.org/1999/xhtml">This is a paragraph</html:p>
      </sch:let>
      <sch:pattern>
        <sch:rule context="/">
          <sch:report test="count($foobar[self::html:p]) = 1"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
    <sch:schema queryBinding="xslt" xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:ns prefix="html" uri="http://www.w3.org/1999/xhtml"/>
      <sch:let name="foobar">
        <html:p xmlns:html="http://www.w3.org/1999/xhtml">This is a paragraph</html:p>
      </sch:let>
      <sch:pattern>
        <sch:rule context="/">
          <sch:report test="contains($foobar, 'paragraph')"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
  <documents>
    <document filename="document.xml">
      <root xmlns=""/>
    </document>
  </documents>
</testcase>
