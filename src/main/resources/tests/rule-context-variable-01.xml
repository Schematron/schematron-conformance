<testcase xmlns="tag:dmaus@dmaus.name,2019:Schematron:Testsuite" id="rule-context-variable-01" expect="valid">
  <label>Rule context expression uses a pattern variable</label>
  <reference/>
  <documents>
    <primary filename="document.xml">
      <document xmlns=""/>
    </primary>
  </documents>
  <schemas>
    <sch:schema xmlns:sch="http://purl.oclc.org/dsdl/schematron">
      <sch:pattern>
        <sch:let name="local-name" value="'document'"/>
        <sch:rule context="*[local-name() = $local-name]">
          <sch:assert test="true()"/>
        </sch:rule>
        <sch:rule context="*">
          <sch:assert test="false()"/>
        </sch:rule>
      </sch:pattern>
    </sch:schema>
  </schemas>
</testcase>
